{
  "name": "paramount-ui",
  "version": "1.0.1",
  "description": "React UI Components Library By WeTrust",
  "main": "commonjs/index.js",
  "module": "esm/index.js",
  "typings": "esm/index.d.ts",
  "sideEffects": false,
  "keywords": [
    "paramount",
    "wetrust",
    "ui",
    "react",
    "react-native",
    "react-native-web"
  ],
  "scripts": {
    "dev": "docz dev",
    "test": "echo \"jest\"",
    "build": "yarn build:es2015 && yarn build:esm && yarn build:cjs",
    "build:docs": "docz build",
    "build:es2015": "tsc --module es2015 --target es2015 --outDir dist/es2015",
    "build:esm": "tsc --module es2015 --target es5 --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --target es5 --outDir dist/cjs",
    "fix": "yarn fix:prettier && yarn fix:lint",
    "fix:lint": "tslint --project ./tsconfig.json \"./src/**/*.{ts,tsx}\"",
    "fix:prettier": "prettier \"./src/**/*.{ts,tsx}\" --write",
    "clean": "rimraf dist",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "contributors": [
    "Vu Hoang Minh (http://github.com/minheq)"
  ],
  "license": "MIT",
  "dependencies": {
    "react": "16.6.3",
    "react-art": "16.6.3",
    "react-dom": "16.6.3",
    "react-icons": "3.2.2",
    "react-native-web": "0.9.5"
  },
  "devDependencies": {
    "@babel/core": "7.1.6",
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.5",
    "@semantic-release/github": "^5.2.5",
    "@semantic-release/npm": "^5.1.1",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@types/react": "16.7.3",
    "@types/react-dom": "16.0.9",
    "@types/react-native": "0.57.7",
    "docz": "0.12.13",
    "docz-plugin-react-native": "0.11.2",
    "husky": "^1.2.0",
    "jest": "23.6.0",
    "lint-staged": "^8.1.0",
    "metro-react-native-babel-preset": "0.50.0",
    "prettier": "^1.15.3",
    "react-docgen-typescript-loader": "3.0.0",
    "react-powerplug": "1.0.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.12.3",
    "travis-deploy-once": "^5.0.9",
    "ts-jest": "23.10.5",
    "ts-loader": "5.3.0",
    "tslint": "5.11.0",
    "tslint-sonarts": "1.8.0",
    "typescript": "3.1.5",
    "webpack-merge": "4.1.4"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx}": [
      "yarn fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WeTrustPlatform/paramount.git"
  }
}
